@using Mvc_Eczane.Models.Entity
@model List<TBLKATEGORI>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Kategoriler Sayfası</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kategori Adı</th>
        <th>İşlem</th>
    </tr>
    @foreach (var ktgr in Model)
    {
        <tr>
            <td>@ktgr.ID</td>
            <td>@ktgr.AD</td>
            <td><a href="/Kategori/KategoriGetir/@ktgr.ID" class="btn btn-primary">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Kategori/KategoriEkle/" class="btn btn-success">Yeni Kategori Girişi</a>


