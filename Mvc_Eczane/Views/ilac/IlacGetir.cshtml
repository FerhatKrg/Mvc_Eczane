@model Mvc_Eczane.Models.Entity.TBLILAC
@{
    ViewBag.Title = "IlacGetir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Guncelle", "ilac", FormMethod.Post))
{
    <div>
        <div style="margin-top:15px">
            <label>İlaç Adı</label>
            @Html.TextBoxFor(x => x.ILACADI, new { @class = "form-control" })
        </div>
        <div style="margin-top:15px">
            <label>Stok</label>
            @Html.TextBoxFor(x => x.STOK, new { @class = "form-control" })
        </div>
        <div style="margin-top:15px">
            <label>Kategori</label>
            @Html.DropDownListFor(x => x.TBLKATEGORI.ID, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })
        </div>
        <div style="margin-top:15px">
            <label>Fiyat</label>
            @Html.TextBoxFor(x => x.FIYAT, new { @class = "form-control" })
        </div>
        @Html.HiddenFor(x => x.ID)
        <button class="btn btn-primary">Güncelle</button>
    </div>
}

