@model Mvc_Eczane.Models.Entity.TBLECZANE
@{
    ViewBag.Title = "YeniEcz";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("YeniEcz","Eczane", FormMethod.Post))
{
    <div style="margin-top:15px">
        <label>Eczane Adı</label>
        @Html.TextBoxFor(x => x.AD, new { @class = "form-control" })
        @Html.ValidationMessageFor(x=>x.AD,"", new { @style="color:red" })
    </div>
    <div style="margin-top:15px">
        <label>Şehir</label>
        @Html.TextBoxFor(x => x.SEHIR, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.SEHIR, "", new { @style = "color:blue" })
    </div>
    <button class="btn btn-primary">Ekle</button>
}

